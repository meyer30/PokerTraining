<Window x:Class="PokerOdds.Wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PokerOdds.Wpf"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button Content="Run" HorizontalAlignment="Left" Margin="686,175,0,0" VerticalAlignment="Top" Click="RunBtn_Click"/>
        <Label Content="Results" HorizontalAlignment="Left" Margin="46,177,0,0" VerticalAlignment="Top"/>
        <ListBox Name="ResultsBox" Margin="46,217,302,48"/>
        <ComboBox HorizontalAlignment="Left" Margin="46,65,0,0" VerticalAlignment="Top" Width="120" 
                  ItemsSource="{Binding Deck}" 
                  SelectedItem="{Binding SelectedCard1}"
                  DisplayMemberPath="DisplayName"
                  />
        <Label Content="Pocket" HorizontalAlignment="Left" Margin="46,26,0,0" VerticalAlignment="Top"/>
        <Label Content="Flop" HorizontalAlignment="Left" Margin="46,107,0,0" VerticalAlignment="Top"/>
        <ComboBox HorizontalAlignment="Left" Margin="183,65,0,0" VerticalAlignment="Top" Width="120" 
            ItemsSource="{Binding Deck}" 
            SelectedItem="{Binding SelectedCard2}"
            DisplayMemberPath="DisplayName"
                  />
        <ComboBox HorizontalAlignment="Left" Margin="46,138,0,0" VerticalAlignment="Top" Width="120" 
            ItemsSource="{Binding Deck}" 
            SelectedItem="{Binding SelectedCard3}"
            DisplayMemberPath="DisplayName"
                  />
        <ComboBox HorizontalAlignment="Left" Margin="183,138,0,0" VerticalAlignment="Top" Width="120" 
            ItemsSource="{Binding Deck}" 
            SelectedItem="{Binding SelectedCard4}"
            DisplayMemberPath="DisplayName"
                  />
        <ComboBox HorizontalAlignment="Left" Margin="328,138,0,0" VerticalAlignment="Top" Width="120" 
            ItemsSource="{Binding Deck}" 
            SelectedItem="{Binding SelectedCard5}"
            DisplayMemberPath="DisplayName"
                  />
    </Grid>
</Window>
